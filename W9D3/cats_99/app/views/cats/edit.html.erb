<h2>Create a cat!</h2>

<form action="/cats" method="POST">
   <input type="hidden" name="_method" value="PATCH">

    <label for="name"> <b>Name</b> </label> <br>
    <input type="text" name="cat[name]" value="<%=@cat.name%>"> <br>

   <label for="birth_date"> <b>Birth Date</b> </label> <br>

    <input type="date"  name="cat[birth_date]"
       min="2000-01-01" max="2019-06-19"> <br>


    <label for="sex" > <b>Sex</b> </label> <br>
    <input type="radio" name = "cat[sex]" value="M" > Male   
    <input type="radio" name = "cat[sex]" value="F" > Female <br>

    <label for="color" > <b>Color</b> </label> <br>
        <select name="cat[color]"> 
            <option disabled selected> -Please Select- <option>
            <% Cat::COLORS.each do |color| %> 
            <option value="<%=color%>"> <%=color%></option>
            <%end%>
        </select>
       <br>
    <label for="description" > <b>Description</b> </label> <br>
    <input type="text" name= "cat[description]"> <br>
    
    <input type="submit" value="Create the cat!">
    
</form>