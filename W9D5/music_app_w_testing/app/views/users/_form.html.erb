<% action = (user.persisted? ? user_url(user) : users_url) %>
<% method = (user.persisted? ? :patch : :post) %>

<form action="<%= action %> "method ="post">
<input type="hidden" name="_method" value="<%= method %>">
<input
  type="hidden"
  name="authenticity_token"
  value="<%=form_authenticity_token%>">

    <label for="email_field">Email </label>
    <input type="text" name="user[email]" value="<%= user.email %>" id="email_field">

    <label for="password_field"> Password </label>
    <input type="text" name="user[password]" value="<%=user.password%>" id="password_field">

    <button action="<%= action %>">Submit</button>
    
</form>